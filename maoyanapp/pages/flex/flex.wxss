/**
设置view为弹性盒子

居左，居上：flex-start
居右，居下：flex-end
居中：center

**/
.v1{
  height: 100px;
  display:flex;
  justify-content: center;/**主轴居中**/
  align-items: center;
}

/**
   主轴：flex-start, center, flex-end, space-between, space-evenly
**/
.v2{
  width:100%;
  height:300px;
  border:1px solid red;
  box-sizing: border-box;
  display: flex;
  justify-content: space-evenly;
  align-items: space-evenly;
  flex-wrap: wrap;/**子元素可以换行**/
}

.v2_1{
  width:120px;
  height: 80px;
  background-color: red;
}

